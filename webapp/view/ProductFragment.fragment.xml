<c:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns:m="sap.m" xmlns:c="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout">
    <l:VerticalLayout id="_IDGenVerticalLayout1" >
	<Table id="idProductsTable"
		inset="false"
		selectionChange="onSelectionChange" 
		mode="SingleSelectMaster" 
		items="{path: '/Products'}">
		<headerToolbar>
			<OverflowToolbar id="OverflowToo0">
				<content>
					<Title id="title00" text="Products" level="H2"/>
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<items>
			<ColumnListItem id="__item0">
			    <cells>
			        <Text text="{Name}" id="__text0"/>
			        <Text text="{Price}" id="__text1"/>
	            </cells>
			</ColumnListItem>
		</items>
		<columns>
			<Column id="col01"
				width="12em">
				<Text id="text01" text="Name" />
			</Column>
			<Column id="col02"
				hAlign="End">
				<Text id="text02" text="Price" />
			</Column>
		</columns>
	</Table>
	    <Input placeholder="00.00" width="200px" id="input0"/>
		<Button text="Filtern" id="button0" press="onPress"/>
</l:VerticalLayout>
</c:FragmentDefinition>