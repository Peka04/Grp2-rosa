<c:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns:m="sap.m" xmlns:c="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout">
    <l:VerticalLayout id="_IDGenVerticalLayout1" >
	<Table id="idProductsTable"
		inset="false"
		selectionChange="onSelectionChangeProduct" 
		mode="SingleSelectMaster" 
		items="{path: '/Products'}">
		<items>
			<ColumnListItem id="__item0">
			    <cells>
			        <Text text="{Name}" id="__text0"/>
			        <Text text="{Price}" id="__text1"/>
	            </cells>
			</ColumnListItem>
		</items>
		<columns>
			<Column id="col01"
				width="12em">
				<Text id="text01" text="Name" />
			</Column>
			<Column id="col02"
				hAlign="End">
				<Text id="text02" text="Price" />
			</Column>
		</columns>
	</Table>
</l:VerticalLayout>
</c:FragmentDefinition>