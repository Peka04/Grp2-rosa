<c:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns:m="sap.m" xmlns:c="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout">
    <l:VerticalLayout id="_IDGenVerticalLayout1" >
	<Table id="idProductsTable"
		inset="false"
		selectionChange="onSelectionChangeProduct" 
		mode="SingleSelectMaster" 
		items="{path: '/Products'}">
		<headerToolbar>
			<OverflowToolbar id="OverflowToo0">
				<content>
					<Title id="title00" text="Produkte" level="H2"/>
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<items>
			<ColumnListItem id="__item0">
			    <cells>
			        <Text text="{Name}" id="__text0"/>
			        <Text text="{Price}" id="__text1"/>
	            </cells>
			</ColumnListItem>
		</items>
		<columns>
			<Column id="col01"
				width="12em">
				<Text id="text01" text="Name" />
			</Column>
			<Column id="col02"
				hAlign="End">
				<Text id="text02" text="Preis" />
			</Column>
		</columns>
	</Table>
	<m:Label id="lab00" text="price von"></m:Label>
	    <Input placeholder="€" width="100px" id="input00" />
		<m:Label id="lab01" text="price bis"></m:Label>
		<Input placeholder="€" width="100px" id="input01" value="{path:'/Price', type: 'sap.ui.model.type.Integer' , constraints:{minimum:1, maximum:20000000}}"/>
		<Input placeholder="A...Z" width="200px" id="input02"/>
		<Button text="Filtern" id="button00" press="onPress"/>
		<Button text="Reset" id="button01" press="onReset"/>
		<Button text="Sortieren" id="button02" press="onSort"/>
</l:VerticalLayout>
</c:FragmentDefinition>